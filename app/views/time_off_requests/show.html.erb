<div class="row">
  <div class="col-lg-10 mx-auto">
    <!-- Back Button -->
    <div class="mb-3">
      <%= link_to time_off_requests_path, class: "btn btn-outline-secondary btn-sm" do %>
        <i class="bi bi-arrow-left"></i> Back to Requests
      <% end %>
    </div>

    <!-- Request Details Card -->
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
          <i class="bi bi-calendar-check"></i> Time-Off Request Details
        </h4>
        <% case @time_off_request.status %>
        <% when 'pending' %>
          <span class="badge bg-warning status-badge">Pending Review</span>
        <% when 'approved' %>
          <span class="badge bg-success status-badge">Approved</span>
        <% when 'denied' %>
          <span class="badge bg-danger status-badge">Denied</span>
        <% when 'cancelled' %>
          <span class="badge bg-secondary status-badge">Cancelled</span>
        <% end %>
      </div>
      
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <h6 class="text-muted mb-1">Employee</h6>
            <p class="h5"><%= @time_off_request.user.full_name %></p>
            <p class="text-muted mb-0">
              <%= @time_off_request.user.email %><br>
              <%= @time_off_request.user.department&.name %>
            </p>
          </div>
          
          <div class="col-md-6">
            <h6 class="text-muted mb-1">Leave Type</h6>
            <p class="h5"><%= @time_off_request.time_off_type.name %></p>
            <% if @time_off_request.time_off_type.description.present? %>
              <p class="text-muted mb-0"><%= @time_off_request.time_off_type.description %></p>
            <% end %>
          </div>
        </div>

        <hr>

        <div class="row mb-4">
          <div class="col-md-4">
            <h6 class="text-muted mb-1">Start Date</h6>
            <p class="h5"><%= @time_off_request.start_date.strftime('%B %d, %Y') %></p>
          </div>
          
          <div class="col-md-4">
            <h6 class="text-muted mb-1">End Date</h6>
            <p class="h5"><%= @time_off_request.end_date.strftime('%B %d, %Y') %></p>
          </div>
          
          <div class="col-md-4">
            <h6 class="text-muted mb-1">Total Duration</h6>
            <p class="h5">
              <span class="badge bg-primary" style="font-size: 1.2rem;">
                <%= @time_off_request.total_days %> business days
              </span>
            </p>
          </div>
        </div>

        <% if @time_off_request.reason.present? %>
          <hr>
          <div class="mb-4">
            <h6 class="text-muted mb-2">Reason</h6>
            <p><%= simple_format(@time_off_request.reason) %></p>
          </div>
        <% end %>

        <% if @time_off_request.reviewed_by.present? %>
          <hr>
          <div class="mb-4">
            <h6 class="text-muted mb-2">Review Information</h6>
            <div class="alert alert-<%= @time_off_request.status_approved? ? 'success' : 'danger' %>">
              <p class="mb-1">
                <strong>Reviewed by:</strong> <%= @time_off_request.reviewed_by.full_name %>
              </p>
              <p class="mb-1">
                <strong>Review Date:</strong> <%= @time_off_request.reviewed_at.strftime('%B %d, %Y at %I:%M %p') %>
              </p>
              <% if @time_off_request.review_notes.present? %>
                <p class="mb-0">
                  <strong>Notes:</strong> <%= @time_off_request.review_notes %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>

        <hr>

        <div class="text-muted small">
          <p class="mb-1">
            <strong>Submitted:</strong> <%= @time_off_request.created_at.strftime('%B %d, %Y at %I:%M %p') %>
          </p>
          <% if @time_off_request.updated_at != @time_off_request.created_at %>
            <p class="mb-0">
              <strong>Last Updated:</strong> <%= @time_off_request.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="card-footer bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <!-- Employee Actions -->
            <% if policy(@time_off_request).update? %>
              <%= link_to edit_time_off_request_path(@time_off_request), class: "btn btn-primary" do %>
                <i class="bi bi-pencil"></i> Edit Request
              <% end %>
            <% end %>
            
            <% if policy(@time_off_request).cancel? %>
              <%= button_to cancel_time_off_request_path(@time_off_request), 
                  method: :post,
                  data: { confirm: "Are you sure you want to cancel this request?" },
                  class: "btn btn-warning" do %>
                <i class="bi bi-x-circle"></i> Cancel Request
              <% end %>
            <% end %>
          </div>

          <div>
            <!-- Manager/Admin Actions -->
            <% if policy(@time_off_request).approve? %>
              <%= button_to approve_time_off_request_path(@time_off_request), 
                  method: :post,
                  data: { confirm: "Approve this time-off request?" },
                  class: "btn btn-success" do %>
                <i class="bi bi-check-circle"></i> Approve
              <% end %>
            <% end %>
            
            <% if policy(@time_off_request).deny? %>
              <%= button_to deny_time_off_request_path(@time_off_request), 
                  method: :post,
                  data: { confirm: "Deny this time-off request?" },
                  class: "btn btn-danger" do %>
                <i class="bi bi-x-circle"></i> Deny
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Approval History -->
    <% if @approvals.any? %>
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-clock-history"></i> Approval History
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <% @approvals.each do |approval| %>
              <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h6 class="mb-1">
                      <%= approval.action_description %> by <%= approval.user.full_name %>
                    </h6>
                    <% if approval.notes.present? %>
                      <p class="mb-1"><%= approval.notes %></p>
                    <% end %>
                    <small class="text-muted">
                      <%= approval.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                    </small>
                  </div>
                  <div>
                    <% case approval.action %>
                    <% when 'approved' %>
                      <span class="badge bg-success">Approved</span>
                    <% when 'denied' %>
                      <span class="badge bg-danger">Denied</span>
                    <% when 'cancelled' %>
                      <span class="badge bg-secondary">Cancelled</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
