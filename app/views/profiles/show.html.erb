<div class="row mb-4">
  <div class="col">
    <h1 class="h2">
      <i class="bi bi-person-circle"></i> My Profile
    </h1>
    <p class="text-muted mb-0">
      Manage your personal details and preferences.
    </p>
  </div>

  <div class="col-auto">
    <div class="d-flex gap-2">
      <%= link_to edit_user_profile_path(current_user), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Edit Profile
      <% end %>

      <%= link_to edit_user_registration_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-shield-lock"></i> Account Settings
      <% end %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-lg-4 mb-3">
    <div class="card card-stats">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <p class="text-muted mb-1">Name</p>
            <h5 class="mb-0">
              <%= [@profile&.first_name, @profile&.last_name].compact.join(" ").presence || "—" %>
            </h5>
            <small class="text-muted">
              <i class="bi bi-envelope"></i> <%= current_user.email %>
            </small>
          </div>
          <div class="text-primary">
            <i class="bi bi-person-badge fs-1"></i>
          </div>
        </div>

        <% if @profile.present? %>
          <div class="mt-3">
            <span class="badge bg-secondary">
              <i class="bi bi-briefcase"></i>
              <%= @profile.department&.name || "No department" %>
            </span>

            <% if @profile.manager.present? %>
              <span class="badge bg-info text-dark ms-1">
                <i class="bi bi-diagram-3"></i>
                Manager: <%= @profile.manager.profile&.first_name || @profile.manager.email %>
              </span>
            <% end %>
          </div>
        <% else %>
          <div class="mt-3">
            <span class="badge bg-warning text-dark">
              <i class="bi bi-exclamation-triangle"></i> Profile incomplete
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-8 mb-3">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-card-text"></i> Profile Details
        </h5>
      </div>

      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <p class="text-muted mb-1">First Name</p>
            <div class="fw-semibold"><%= @profile&.first_name.presence || "—" %></div>
          </div>

          <div class="col-md-6">
            <p class="text-muted mb-1">Last Name</p>
            <div class="fw-semibold"><%= @profile&.last_name.presence || "—" %></div>
          </div>

          <div class="col-md-6">
            <p class="text-muted mb-1">Birth Date</p>
            <div class="fw-semibold">
              <%= @profile&.birth_date.present? ? @profile.birth_date.strftime("%b %d, %Y") : "—" %>
            </div>
          </div>

          <div class="col-md-6">
            <p class="text-muted mb-1">Phone Number</p>
            <div class="fw-semibold">
              <%= @profile&.phone_number.presence || "—" %>
            </div>
          </div>

          <div class="col-md-6">
            <p class="text-muted mb-1">Department</p>
            <div class="fw-semibold"><%= @profile&.department&.name || "—" %></div>
          </div>

          <div class="col-md-6">
            <p class="text-muted mb-1">Manager</p>
            <div class="fw-semibold">
              <% manager = @profile&.manager %>
              <%= manager.present? ? (manager.profile&.first_name.presence || manager.email) : "—" %>
            </div>
          </div>
        </div>

        <hr class="my-4">

        <div class="d-flex justify-content-between align-items-center">
          <div>
            <p class="text-muted mb-1">Status</p>
            <% if @profile.present? %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Active
              </span>
            <% else %>
              <span class="badge bg-warning text-dark">
                <i class="bi bi-exclamation-triangle"></i> Incomplete
              </span>
            <% end %>
          </div>

          <div class="text-end">
            <p class="text-muted mb-1">Last Updated</p>
            <div class="fw-semibold">
              <%= @profile&.updated_at ? time_ago_in_words(@profile.updated_at) + " ago" : "—" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-lightning-charge"></i> Quick Actions
        </h5>
      </div>
      <div class="card-body">
        <%= link_to edit_user_profile_path(current_user), class: "btn btn-primary me-2" do %>
          <i class="bi bi-pencil-square"></i> Edit Profile
        <% end %>

        <%= link_to edit_user_registration_path, class: "btn btn-outline-secondary me-2" do %>
          <i class="bi bi-shield-lock"></i> Update Password
        <% end %>

        <%= link_to time_off_requests_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-list-ul"></i> View My Requests
        <% end %>
      </div>
    </div>
  </div>
</div>
