<div class="row mb-4">
  <div class="col">
    <h1 class="h2">
      <i class="bi bi-person-gear"></i> Edit Profile
    </h1>
    <p class="text-muted mb-0">
      Keep your details up to date.
    </p>
  </div>

  <div class="col-auto">
    <%= link_to user_profile_path(current_user), class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back to Profile
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-card-checklist"></i> Profile Information
        </h5>
      </div>

      <div class="card-body">
        <%= render "form" %>
      </div>
    </div>
  </div>

  <%= render "sidebar" %>
</div>
