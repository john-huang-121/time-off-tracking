<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h1 class="h3 mb-1">Create your account</h1>
            <p class="text-muted mb-0">Sign up to start using Time-Off Tracker.</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "vstack gap-3" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div>
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "form-control",
                    placeholder: "you@example.com" %>
            </div>

            <div>
              <div class="d-flex justify-content-between align-items-baseline">
                <%= f.label :password, class: "form-label mb-0" %>
                <% if @minimum_password_length %>
                  <small class="text-muted"><%= @minimum_password_length %>+ characters</small>
                <% end %>
              </div>
              <%= f.password_field :password,
                    autocomplete: "new-password",
                    class: "form-control",
                    placeholder: "••••••••" %>
            </div>

            <div>
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    class: "form-control",
                    placeholder: "••••••••" %>
            </div>

            <div class="d-grid pt-2">
              <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <p class="text-center text-muted small mt-3 mb-0">
        By signing up, you agree to follow your company’s time-off policy.
      </p>
    </div>
  </div>
</div>
