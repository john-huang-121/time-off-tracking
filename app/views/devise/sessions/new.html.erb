<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h1 class="h3 mb-1">Log in</h1>
            <p class="text-muted mb-0">Welcome back — sign in to continue.</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "vstack gap-3" }) do |f| %>
            <div>
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "form-control",
                    placeholder: "you@example.com" %>
            </div>

            <div>
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password,
                    autocomplete: "current-password",
                    class: "form-control",
                    placeholder: "••••••••" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid pt-2">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <p class="text-center text-muted small mt-3 mb-0">
        Tip: Use “Remember me” only on trusted devices.
      </p>
    </div>
  </div>
</div>
