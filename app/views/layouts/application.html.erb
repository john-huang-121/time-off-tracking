<!DOCTYPE html>
<html>
  <head>
    <title>Time-Off Tracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <style>
      body {
        padding-top: 60px;
      }
      .navbar-brand {
        font-weight: bold;
      }
      .status-badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
      }
      .card-stats {
        border-left: 4px solid #007bff;
      }
      .footer {
        margin-top: 50px;
        padding: 20px 0;
        border-top: 1px solid #e9ecef;
      }
    </style>
  </head>

  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
      <div class="container-fluid">
        <%= link_to "Time-Off Tracker", root_path, class: "navbar-brand" %>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <% if user_signed_in? %>
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "My Requests", time_off_requests_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "New Request", new_time_off_request_path, class: "nav-link" %>
              </li>
            </ul>
            
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="bi bi-person-circle"></i> <%= current_user.full_name.presence || current_user.email %>
                  <% if current_user.role_admin? %>
                    <span class="badge bg-danger">Admin</span>
                  <% elsif current_user.role_manager? %>
                    <span class="badge bg-warning">Manager</span>
                  <% end %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li>
                    <span class="dropdown-item-text">
                      <small class="text-muted"><%= current_user.email %></small>
                    </span>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  </li>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-3">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <main class="container">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="footer text-center text-muted">
      <div class="container">
        <small>Time-Off Tracker &copy; <%= Date.current.year %> | Built with Rails 8</small>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
